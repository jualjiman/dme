*
	font-family 'Open Sans', sans-serif

hr 
	background-image: -webkit-linear-gradient(left, transparent, rgba(0, 0, 0, 0.2), transparent)
	background-image: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.2), transparent)
	border: 0
	height: 1px
	margin: 22px 0 22px 0

h1
	color textoPrimario
	font-weight 300

header
	position relative
	z-index 3
	background-color: #f8f8f8;
	border-bottom solid 1px #e7e7e7
	border-radius: 0;
	box-shadow 0 4px 40px rgba(0, 0, 0, 0.4)
	background: linear-gradient( #f6f6f6, white)
	border-top 5px solid #ededed

.navbar-default
	border-radius: 0
	border none
	background: transparent
	transition margin-bottom 0.5s ease

	.navbar-header
		margin-bottom: 20px

		.navbar-brand
			padding-top 12px
			transition padding-top 0.5s ease

			img
				width 175px
				transition width 0.5s ease
	
	.navbar-collapse
		margin-top: 40px


		.navbar-nav
			padding-top: 10px
			
			li
				margin-left 1px
				margin-right 1px

				.dropdown-menu
					border-radius 9px
				a
					padding-top 10px;
					padding-bottom 10px;
					border-radius 5px
					font-weight bold
					font-size 12px
					transition all 0.5s ease

					&:hover
						btnNavSel()

			.active
				a
					btnNavSel()			

.small
	margin-bottom 0
	.navbar-header
		.navbar-brand
			padding-top 0 !important
			img
				width 150px !important
	.navbar-collapse
			margin-top: 2px !important

.main-slider
	height 500px
	background #ccc
	border-bootom: solid 1px #BBBBBB

footer
	background pie
	padding-bottom 25px

	.footernav
		background piebajo

		.nav-footer
			float right

			li
				display inline-block

				a
					transition all 0.5s ease
					font-size 12px
					color letrasfooter

					&:hover
						background inherit
						color white
	.copyright 
		padding: 10px 15px;
		color letrasfooter
		font-size 12px
		float left
		

@media (min-width: 768px)
	.navbar-default
		.navbar-collapse
			margin-top: 25px;
			float right

@media (max-width: 768px)
	footer
		.footernav
			.nav-footer
				float none

				li
					display inline-block
					width 24%
		.copyright 
			background azulobscuro
			float none
			text-align center
					

