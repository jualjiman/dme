// ==============VARIABLES===========================
azul = #0088cc

textoPrimario = #4E4E50
textoSecundario = #777777

pie = #345778
piebajo = #305171
letrasfooter = #458ece

// ==============MIXINS==============================
btnNavSel()
	background azul
	color white

// ==============TODO LO DEMAS========================

*
	font-family 'Open Sans', sans-serif;

header
	position relative
	z-index 3
	background-color: #f8f8f8;
	border-bottom solid 1px #e7e7e7
	border-radius: 0;
	box-shadow 0 4px 40px rgba(0, 0, 0, 0.4)

.navbar-default
	border-radius: 0;
	border none

	.navbar-header
		margin-bottom: 20px

		.navbar-brand
			padding-top 12px

			img
				width 175px
	
	.navbar-collapse
		margin-top: 40px;


		.navbar-nav
			padding-top: 10px
			
			li
				margin-left 1px
				margin-right 1px

				.dropdown-menu
					border-radius 9px
				a
					padding-top 10px;
					padding-bottom 10px;
					border-radius 5px
					font-weight bold
					font-size 12px
					transition all 0.5s ease

					&:hover
						btnNavSel()

			.active
				a
					btnNavSel()			
.main-slider
	height 500px
	background #ccc
	border-bottom solid 4px azul

.main-content
	.mainMessage
		text-align center

h1
	color textoPrimario

h2
	color textoSecundario
	font-size 22px

footer
	background pie
	padding-bottom 25px

	.footernav
		background piebajo

		.nav-footer
			float right

			li
				display inline-block

				a
					transition all 0.5s ease
					font-size 12px
					color letrasfooter

					&:hover
						background inherit
						color white
	.copyright 
		padding: 10px 15px;
		color letrasfooter
		font-size 12px
		float left
		

@media (min-width: 768px)
	.navbar-default
		.navbar-collapse
			margin-top: 25px;
			float right

@media (max-width: 768px)
	footer
		.footernav
			.nav-footer
				float none

				li
					display inline-block
					width 24%
		.copyright 
			float none
			text-align center
					

